# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ===========================================
# DATABASE & CACHE
# ===========================================

# PostgreSQL Database
DATABASE_URL="postgresql://postgres:seo_dashboard_2026@localhost:5432/seo_dashboard"

# Redis for caching and background jobs
REDIS_URL="redis://localhost:6379"

# ===========================================
# AUTHENTICATION (Better Auth)
# ===========================================

# 32+ character secret for session encryption
BETTER_AUTH_SECRET="your-32-character-secret-key-here-make-it-random"

# ===========================================
# GOOGLE APIS
# ===========================================

# Google OAuth (for Search Console access)
GOOGLE_CLIENT_ID="your-google-oauth-client-id.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Google PageSpeed Insights API (optional - higher rate limits)
# Prefer PAGESPEED_API_KEY; GOOGLE_PAGESPEED_API_KEY still supported for backward compat.
PAGESPEED_API_KEY="your-pagespeed-api-key"
GOOGLE_PAGESPEED_API_KEY=""

# ===========================================
# ENCRYPTION & SECURITY
# ===========================================

# Exactly 32-byte ASCII key for encrypting GSC refresh tokens (required in production)
# Example: ENCRYPTION_KEY="1234567890abcdef1234567890abcdef"
ENCRYPTION_KEY="your-32-byte-ascii-encryption-key"

# Secure secret for protecting cron job endpoints
CRON_SECRET="your-secure-cron-secret-key-minimum-32-chars"

# ===========================================
# EMAIL SERVICE
# ===========================================

# Resend API for magic link emails
RESEND_API_KEY="re_your-resend-api-key-here"

# Email sender configuration
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_FROM_NAME="SEO Dashboard"

# ===========================================
# OBJECT STORAGE (MinIO/S3)
# ===========================================

# MinIO Configuration (S3 compatible)
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="glimpse_admin"
MINIO_SECRET_KEY="glimpse_minio_2026"
MINIO_BUCKET="seo-reports"
MINIO_REGION="us-east-1"

# Alternative: AWS S3 Configuration
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_S3_BUCKET="your-s3-bucket"
# AWS_REGION="us-east-1"

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Initial admin user (created automatically on first run)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_NAME="Admin User"

# ===========================================
# MONITORING & TELEMETRY
# ===========================================

# Next.js Telemetry (disable in production)
NEXT_TELEMETRY_DISABLED=1

# Logging level
LOG_LEVEL="info"

# Sentry DSN for error tracking (optional)
# SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/project"

# ===========================================
# BACKGROUND JOBS CONFIGURATION
# ===========================================

# GSC Sync Settings
GSC_SYNC_INTERVAL_HOURS=24
GSC_SYNC_RETENTION_DAYS=365
GSC_MAX_ROWS_PER_REQUEST=1000

# Performance Test Settings
PERFORMANCE_TEST_INTERVAL_HOURS=24
PERFORMANCE_TEST_MOBILE_ONLY=false

# Crawler Settings
CRAWLER_INTERVAL_DAYS=7
CRAWLER_MAX_PAGES=100
CRAWLER_TIMEOUT_MS=30000

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Docker Compose Variables
POSTGRES_PASSWORD=seo_dashboard_2026
POSTGRES_DB=seo_dashboard
POSTGRES_USER=postgres

REDIS_PASSWORD=""

MINIO_ROOT_USER=glimpse_admin
MINIO_ROOT_PASSWORD=glimpse_minio_2026

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Disable auth checks in development
# DEV_SKIP_AUTH=false

# Enable debug logging
# DEBUG="*"

# Mock external APIs in development
# MOCK_GSC_API=false
# MOCK_PAGESPEED_API=false