# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/seo_tracker"

# Redis (for caching and job queue)
REDIS_URL="redis://localhost:6379"

# Better Auth
BETTER_AUTH_SECRET="your-32-character-secret-key-here"

# Google OAuth (for Search Console access)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Google PageSpeed Insights API (optional, uses public endpoint if not provided)
GOOGLE_PAGESPEED_API_KEY="your-pagespeed-api-key"

# Encryption key for storing GSC refresh tokens (64 char hex)
ENCRYPTION_KEY="your-64-character-hex-encryption-key-for-gsc-tokens"

# Email (Resend for magic links)
RESEND_API_KEY="re_your-resend-api-key"

# Cron Job Protection
CRON_SECRET="your-secure-cron-secret-key"

# Admin User (will be created on first run)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_NAME="Admin User"